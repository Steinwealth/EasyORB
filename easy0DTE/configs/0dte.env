# Easy 0DTE Strategy Configuration
# =================================

# Enable 0DTE Strategy
ENABLE_0DTE_STRATEGY=true

# Trading Mode (demo or live)
# Demo Mode: Simulated trading with mock executor
# Live Mode: Real trading with ETrade API
ETRADE_MODE=demo
DEPLOYMENT_MODE=demo
DEMO_MODE_ENABLED=true

# Convex Eligibility Filter Settings
0DTE_CONVEX_VOLATILITY_PERCENTILE=0.80
0DTE_CONVEX_ORB_RANGE_MIN=0.35
0DTE_CONVEX_MOMENTUM_REQUIRED=true
0DTE_CONVEX_TREND_DAY_REQUIRED=true
0DTE_CONVEX_MIN_SCORE=0.75

# Position Limits (Mirror ORB Strategy)
# Rev 00231: Updated to match ORB Strategy risk parameters
0DTE_MAX_POSITIONS=15  # Max concurrent positions (same as ORB Strategy)
# Note: 0DTE_MAX_POSITION_COST removed - using only 35% max position size (matches ORB Strategy)

# Debit Spread Settings
0DTE_DEBIT_SPREAD_TARGET_DELTA_MIN=0.30
0DTE_DEBIT_SPREAD_TARGET_DELTA_MAX=0.45
0DTE_DEBIT_SPREAD_WIDTH_OPTIONS=1.0,2.0

# Lotto Sleeve Settings
0DTE_LOTTO_SLEEVE_ENABLED=false
0DTE_LOTTO_SLEEVE_TARGET_DELTA=0.15
0DTE_LOTTO_SLEEVE_MAX_COST=200.00

# Options Chain Settings
0DTE_OPTIONS_MIN_OPEN_INTEREST=100
0DTE_OPTIONS_MAX_BID_ASK_SPREAD_PCT=5.0
0DTE_OPTIONS_MIN_VOLUME=50

# Profit Management
0DTE_AUTO_PARTIAL_ENABLED=true
0DTE_PARTIAL_PROFIT_PCT=0.50
0DTE_RUNNER_PROFIT_PCT=2.0

# Target Symbols (Priority: SPX → QQQ → SPY)
0DTE_TARGET_SYMBOLS=SPX,QQQ,SPY

# Symbol Mapping (ORB symbol -> 0DTE symbol)
# Format: ORB_SYMBOL:0DTE_SYMBOL
# Includes ALL QQQ and SPY leverage alternatives from core_list.csv
# QQQ alternatives: TQQQ (3x), QLD (2x), SQQQ (3x inverse), QID (2x inverse)
# SPY alternatives: SPYU (4x), SPXL (3x), UPRO (3x), SSO (2x), SPXU (3x inverse), SPXS (3x inverse), SDS (2x inverse)
0DTE_SYMBOL_MAPPING=TQQQ:QQQ,QLD:QQQ,SQQQ:QQQ,QID:QQQ,SPYU:SPY,SPXL:SPY,UPRO:SPY,SSO:SPY,SPXU:SPY,SPXS:SPY,SDS:SPY

