# === DEPLOYMENT CONFIGURATION ===
# Easy ORB Strategy - Configuration for Google Cloud deployment with Demo/Live automation modes
# Last updated: 2026-01-06 (Rev 00231)

# === DEPLOYMENT MODE ===
# Set to 'demo' for Sandbox trading or 'live' for production trading
DEPLOYMENT_MODE=demo
AUTOMATION_ENABLED=true

# === DEMO MODE CONFIGURATION ===
DEMO_MODE_ENABLED=true
DEMO_ETRADE_SANDBOX=true
# SECURITY: Credentials loaded from secretsprivate/etrade.env (local) or Google Secret Manager (production)
DEMO_ACCOUNT_ID=
DEMO_CONSUMER_KEY=
DEMO_CONSUMER_SECRET=
DEMO_BASE_URL=https://apisb.etrade.com

# === LIVE MODE CONFIGURATION ===
LIVE_MODE_ENABLED=false
LIVE_ETRADE_SANDBOX=false
# SECURITY: Credentials loaded from secretsprivate/etrade.env (local) or Google Secret Manager (production)
LIVE_ACCOUNT_ID=
LIVE_CONSUMER_KEY=
LIVE_CONSUMER_SECRET=
LIVE_BASE_URL=https://api.etrade.com

# === TELEGRAM ALERT CONFIGURATION ===
TELEGRAM_ENABLED=true
# SECURITY: Credentials loaded from secretsprivate/telegram.env (local) or Google Secret Manager (production)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
TELEGRAM_ALERT_TYPES=entry,exit,error,performance,daily_summary,system_status

# === TRADING ALERTS ===
ALERT_ON_SIGNAL_GENERATION=true
ALERT_ON_POSITION_OPENING=true
ALERT_ON_POSITION_CLOSING=true
ALERT_ON_STOP_LOSS_HIT=true
ALERT_ON_TAKE_PROFIT_HIT=true
ALERT_ON_ERRORS=true
ALERT_ON_SYSTEM_STATUS=true

# === PERFORMANCE ALERTS ===
ALERT_ON_DAILY_PNL=true
ALERT_ON_WEEKLY_PNL=true
ALERT_ON_MONTHLY_PNL=true
ALERT_ON_TRADE_SUMMARY=true
ALERT_ON_PERFORMANCE_MILESTONES=true

# === ALERT THRESHOLDS ===
DAILY_PNL_ALERT_THRESHOLD_PCT=5.0
WEEKLY_PNL_ALERT_THRESHOLD_PCT=10.0
MONTHLY_PNL_ALERT_THRESHOLD_PCT=20.0
LOSS_THRESHOLD_ALERT_PCT=-5.0

# === ALERT TIMING ===
DAILY_ALERT_TIME=16:05
WEEKLY_ALERT_TIME=16:00
MONTHLY_ALERT_TIME=16:00
ALERT_TIMEZONE=America/New_York

# === ALERT FREQUENCY CONTROL ===
MAX_ALERTS_PER_MINUTE=20
MAX_ALERTS_PER_HOUR=100
ALERT_COOLDOWN_MINUTES=5
DUPLICATE_ALERT_THRESHOLD_MINUTES=30

# === GOOGLE CLOUD CONFIGURATION ===
# Rev 00190: Centralized cloud configuration for easy deployment to different projects
# Change these values to deploy to a different GCP project
GCP_PROJECT_ID=easy-etrade-strategy
GCP_REGION=us-central1
GCP_ZONE=us-central1-a
GCP_SERVICE_NAME=easy-etrade-strategy
GCS_BUCKET_NAME=easy-etrade-strategy-data
# GCS_BUCKET_NAME can be auto-derived from GCP_PROJECT_ID if not set: {GCP_PROJECT_ID}-data
GCP_CONTAINER_IMAGE=gcr.io/easy-etrade-strategy/easy-etrade-strategy:latest

# === CONTAINER CONFIGURATION ===
CONTAINER_CPU=2
CONTAINER_MEMORY=4Gi
CONTAINER_MAX_INSTANCES=10
CONTAINER_MIN_INSTANCES=1
CONTAINER_TIMEOUT=300s

# === HEALTH CHECK CONFIGURATION ===
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL_SECONDS=60
HEALTH_CHECK_TIMEOUT_SECONDS=30
HEALTH_CHECK_PATH=/health

# === LOGGING CONFIGURATION ===
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_TO_STDOUT=true
LOG_TO_FILE=false
LOG_ROTATION=true
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5

# === MONITORING CONFIGURATION ===
METRICS_ENABLED=true
METRICS_PORT=8080
METRICS_PATH=/metrics
PERFORMANCE_MONITORING=true
ERROR_MONITORING=true
ALERT_MONITORING=true

# === SECURITY CONFIGURATION ===
SECURE_TOKEN_STORAGE=true
ENCRYPT_SENSITIVE_DATA=true
AUDIT_LOGGING=true
ACCESS_CONTROL=true

# === BACKUP CONFIGURATION ===
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_TO_GCS=true

# === AUTO-SCALING CONFIGURATION ===
AUTO_SCALING_ENABLED=true
MIN_INSTANCES=1
MAX_INSTANCES=10
TARGET_CPU_UTILIZATION=70
TARGET_MEMORY_UTILIZATION=80

# === NETWORK CONFIGURATION ===
ALLOWED_IPS=0.0.0.0/0
ENABLE_HTTPS=true
SSL_CERTIFICATE_PATH=/etc/ssl/certs
SSL_PRIVATE_KEY_PATH=/etc/ssl/private

# === ENVIRONMENT VARIABLES ===
PYTHONPATH=/app
PYTHONUNBUFFERED=1
TZ=America/New_York

# === FEATURE FLAGS ===
ENABLE_ALERT_MANAGER=true
ENABLE_PRIME_SYSTEM=true
# ARCHIVED (Rev 00173): Multi-strategy no longer used - ORB strategy only
# ENABLE_MULTI_STRATEGY=false  # ❌ ARCHIVED
ENABLE_ORB_STRATEGY=true  # ⭐ PRIMARY STRATEGY
ENABLE_0DTE_STRATEGY=true  # ⭐ Enable 0DTE Strategy (Rev 00209 - shares same Cloud Run service)
ENABLE_RISK_MANAGEMENT=true
ENABLE_PERFORMANCE_TRACKING=true
ENABLE_AUTO_TRADING=true

# === DEPLOYMENT SAFETY ===
DEPLOYMENT_SAFETY_CHECKS=true
PRE_DEPLOYMENT_TESTS=true
POST_DEPLOYMENT_VALIDATION=true
ROLLBACK_ENABLED=true
EMERGENCY_STOP_ENABLED=true
