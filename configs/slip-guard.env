# Slip Guard Configuration
# ========================
# ADV-based position size capping to prevent slippage as account scales

# Enable/Disable Slip Guard
SLIP_GUARD_ENABLED=true

# ADV Limit (percentage of Average Daily Volume)
SLIP_GUARD_ADV_PCT=1.0          # 1.0% of ADV (aggressive, acceptable slippage)
                                 # Use 0.5 for conservative (institutional standard)

# ADV Data Configuration
SLIP_GUARD_LOOKBACK_DAYS=90     # Days to average for ADV calculation
SLIP_GUARD_REFRESH_TIME=06:00   # Daily refresh time (6:00 AM PT, before ORB capture)
SLIP_GUARD_MAX_DATA_AGE_HOURS=48  # Max age before considered stale

# Reallocation Settings
SLIP_GUARD_REALLOCATION_ENABLED=true  # Reallocate freed capital to uncapped signals
SLIP_GUARD_MAX_REALLOCATION_ROUNDS=5  # Max rounds of reallocation (prevents infinite loops)

# Alerting
SLIP_GUARD_ALERT_ON_CAP=true    # Alert when positions are capped
SLIP_GUARD_ALERT_THRESHOLD=3    # Alert if same symbol capped 3+ times in a week
SLIP_GUARD_DAILY_REPORT=true    # Include Slip Guard stats in EOD report

# Performance Tracking
SLIP_GUARD_TRACK_SLIPPAGE=true  # Track actual vs expected execution prices
SLIP_GUARD_METRICS_ENABLED=true # Enable detailed metrics tracking

